<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:background="@color/color_999"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:src="@mipmap/ic_no_login_select"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_check"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="6dp"
        android:layout_toLeftOf="@id/iv_broadcast"
        android:layout_toRightOf="@id/iv_head_portrait"
        android:maxLines="1"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:text="名称"
        android:textColor="#333"/>

    <ImageView
        android:id="@+id/iv_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:padding="10dp"
        android:src="@mipmap/icon_mic_status_open"/>

    <ImageView
        android:id="@+id/iv_hangup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/iv_mic"
        android:padding="10dp"
        android:src="@mipmap/ic_control_hangup"
        />

    <ImageView
        android:id="@+id/iv_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/iv_hangup"
        android:padding="10dp"
        android:src="@mipmap/ic_control_call"
        />

    <ImageView
        android:id="@+id/iv_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/iv_call"
        android:padding="10dp"
        android:visibility="invisible"
        android:src="@mipmap/ic_control_broadcast"
        />

    <View
        android:id="@+id/view_split"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_name"
        android:background="@color/color_444"/>

</RelativeLayout>