<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_bottom_control"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gradient_conf_bg_bottom"
    android:gravity="bottom|center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="10dp"
    >

    <TextView
        android:id="@+id/tv_close_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@id/tv_hang_up"
        android:drawablePadding="8dp"
        android:drawableTop="@mipmap/ic_camera_status_open"
        android:gravity="center"
        android:text="关闭摄像头"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@id/tv_hang_up"
        android:drawablePadding="8dp"
        android:drawableTop="@mipmap/icon_mic_status_open"
        android:gravity="center"
        android:text="麦克风"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hang_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_hang_up"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="1sp" />

        <TextView
            android:id="@+id/tv_timeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="00:00:00"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_toRightOf="@id/tv_hang_up"
        android:drawablePadding="8dp"
        android:drawableTop="@mipmap/icon_unmute"
        android:gravity="center"
        android:text="静音"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_toRightOf="@id/tv_hang_up"
        android:drawablePadding="12dp"
        android:drawableTop="@mipmap/ic_participants"
        android:gravity="center"
        android:text="参会单位"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone"/>

</LinearLayout>