<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:src="@mipmap/ic_no_login_select"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/iv_check"
        android:gravity="center"
        android:layout_alignBottom="@id/iv_check"
        android:layout_toRightOf="@id/iv_check"
        android:maxLines="1"
        android:singleLine="true"
        tools:text="名称"
        android:textColor="#333" />

    <View
        android:layout_below="@id/iv_check"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>