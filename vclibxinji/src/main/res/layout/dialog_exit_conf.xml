<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_15181b_5dp"
                android:maxWidth="260dp">

    <ImageView
        android:id="@+id/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="14dp"
        android:src="@mipmap/ic_dialog_close"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_close"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:text="请选择"
        android:textColor="@color/white"
        android:textSize="17sp"/>

    <android.support.v4.widget.Space
        android:id="@+id/space_center"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_leave_conf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@id/space_center"
        android:background="@drawable/shape_round_418ad5_5dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="退出会议"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_end_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignRight="@id/tv_leave_conf"
        android:layout_below="@id/tv_title"
        android:layout_marginBottom="35dp"
        android:layout_toRightOf="@id/space_center"
        android:background="@drawable/shape_round_fa5067_5dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="结束会议"
        android:textColor="@color/white"
        android:textSize="16sp"/>

