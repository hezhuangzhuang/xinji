<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_top_control"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_gradient_conf_bg_top"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_right_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/statusbar_view_height"
        android:padding="8dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_back_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="@dimen/statusbar_view_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_switch_camera"
        android:visibility="visible"/>

</RelativeLayout>