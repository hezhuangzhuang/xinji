<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_top_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_E64A3A"
    android:paddingTop="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@mipmap/ic_home_logo" />

        <TextView
            android:id="@+id/et_content"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/tv_right_operate"
            android:layout_toRightOf="@id/iv_back_operate"
            android:layout_weight="1"
            android:background="@drawable/shape_bt_input_e42417_25"
            android:drawableLeft="@mipmap/ic_home_search"
            android:drawablePadding="12dp"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="请输入关键字"
            android:textColor="@color/color_facfba"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_right_operate"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:text="我的"
            android:textColor="@color/color_FEE9DF"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_left_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back_operate"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_array"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-8dp"
            android:layout_toRightOf="@id/tv_left_operate"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_right_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:src="@mipmap/ic_home_message"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/iv_right_operate"
            android:drawablePadding="4dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:visibility="gone" />


    </LinearLayout>

</RelativeLayout>