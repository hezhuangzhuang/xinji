<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <!--头部-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_mine_bg"
            android:visibility="visible">
            <FrameLayout
                android:id="@+id/fl_msg"
                android:layout_marginTop="25dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@mipmap/ic_home_message"/>

                <TextView
                    android:layout_height="16dp"
                    android:minWidth="16dp"
                    android:layout_gravity="right"
                    android:layout_margin="6dp"
                    tools:text="9"
                    android:visibility="gone"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_unread_notif_bg"
                    android:id="@+id/tv_msg_number"
                    android:layout_width="wrap_content"
                    />

            </FrameLayout>


            <com.zxwl.commonlibrary.widget.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="65dp"
                android:layout_marginTop="-10dp"
                android:layout_height="65dp"
                android:padding="2dp"
                android:layout_below="@id/fl_msg"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="20dp"
                app:border_width="2dp"
                app:border_color="#E15D27"
                android:src="@mipmap/ic_minel_head"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textColor="@color/color_fcd967"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="刘建国"/>

            <TextView
                android:id="@+id/tv_organization_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:textColor="@color/color_fcd967"
                android:textSize="14sp"
                tools:text="组织组织组织组织组织组织组织组织组织组织组织组织组织组织组织"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/color_f9f9f9"/>

        <TextView
            android:id="@+id/tv_xspb"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_xspb"
            android:text="线上评比"/>

        <View
            style="@style/mine_line_style"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sjdb"
                style="@style/mine_item_text_style"
                android:drawableLeft="@mipmap/ic_mine_sjdb"
                android:text="事件督办"/>

            <TextView
                android:id="@+id/tv_notif"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="35dp"
                android:background="@drawable/shape_unread_bg"
                android:minWidth="20dp"
                android:padding="3dp"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </FrameLayout>

        <View
            style="@style/mine_line_style"/>

        <TextView
            android:id="@+id/tv_sjtj"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_sjtj"
            android:text="数据统计"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/color_f9f9f9"/>

        <TextView
            android:id="@+id/tv_change_pwd"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_change_pwd"
            android:text="修改密码"
            android:visibility="gone"/>

        <View
            style="@style/mine_line_style"/>

        <TextView
            android:id="@+id/tv_jyfk"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_jyfk"
            android:text="建议反馈"/>

        <View
            style="@style/mine_line_style"/>

        <TextView
            android:id="@+id/tv_about"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_about"
            android:text="关于我们"/>

        <View
            style="@style/mine_line_style"/>

        <TextView
            android:id="@+id/tv_update_pwd"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_about"
            android:text="修改密码"/>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="退出登录"
            android:textColor="@color/color_E42417"
            android:textSize="15sp"/>
    </LinearLayout>


</ScrollView>
