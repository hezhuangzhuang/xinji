<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tran"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_white_5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wx_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_share_session"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="26dp"
            android:paddingRight="20dp"
            android:paddingBottom="25dp"
            android:text="微信好友"
            android:textColor="@color/color_E42417"
            android:textSize="15sp" />

        <android.support.v4.widget.Space
            android:layout_width="50dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tv_wx_time_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_wx_time_line"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="26dp"
            android:paddingRight="20dp"
            android:paddingBottom="25dp"
            android:text="朋友圈"
            android:textColor="@color/color_E42417"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_round_white_5dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="取消分享"
        android:textColor="@color/color_333"
        android:textSize="15sp" />

</LinearLayout>