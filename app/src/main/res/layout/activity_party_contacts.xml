<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.zxwl.xinji.activity.RefreshRecyclerActivity">

    <include layout="@layout/common_title_layout_old" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/iv_right_operate"
        android:layout_toRightOf="@id/iv_back_operate"
        android:background="@drawable/shape_bt_input_f2f3f5_25"
        android:drawableLeft="@mipmap/ic_party_search"
        android:drawablePadding="12dp"
        android:ellipsize="middle"
        android:gravity="center_vertical"
        android:hint="请输入关键字搜索"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textColorHint="@color/color_999"
        android:textSize="13sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_screen"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_f6f6f6"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_666"
            android:textSize="14sp"
            tools:text="辛集市" />

        <TextView
            android:id="@+id/tv_screen"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/iv_city_screen"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="请选择"
            android:textColor="@color/color_333"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <include layout="@layout/refresh_layout" />

</LinearLayout>
