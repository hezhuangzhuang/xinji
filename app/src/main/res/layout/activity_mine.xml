<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <!--头部-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_mine_bg"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@mipmap/general_white_back_icon" />
            </FrameLayout>

            <com.zxwl.commonlibrary.widget.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@id/fl_back"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="20dp"
                android:padding="2dp"
                android:src="@mipmap/ic_minel_head"
                app:border_color="#E15D27"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textColor="@color/color_fcd967"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="刘建国" />

            <TextView
                android:id="@+id/tv_organization_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:textColor="@color/color_fcd967"
                android:textSize="14sp"
                tools:text="组织组织组织组织组织组织组织组织组织组织组织组织组织组织组织" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/color_f9f9f9" />

        <TextView
            android:id="@+id/tv_party"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_party"
            android:text="我的支部" />

        <View style="@style/mine_line_style" />

        <TextView
            android:id="@+id/tv_collection"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_collection"
            android:text="我的收藏" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/color_f9f9f9" />


        <TextView
            android:id="@+id/tv_update_pwd"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_change_pwd"
            android:text="修改密码" />


        <View style="@style/mine_line_style" />

        <TextView
            android:id="@+id/tv_jyfk"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_jyfk"
            android:text="建议反馈" />

        <View style="@style/mine_line_style" />

        <TextView
            android:id="@+id/tv_check_update"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_update"
            android:drawableRight="@null"
            android:text="在线升级" />

        <View style="@style/mine_line_style" />

        <TextView
            android:id="@+id/tv_about"
            style="@style/mine_item_text_style"
            android:drawableLeft="@mipmap/ic_mine_about"
            android:text="关于我们" />


        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="退出登录"
            android:textColor="@color/color_E42417"
            android:textSize="15sp" />
    </LinearLayout>


</ScrollView>
