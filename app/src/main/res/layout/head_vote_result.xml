<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_top_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-30dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_vote_result" />

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_top_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp"
        android:background="@drawable/layer_government_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <!--                <com.zxwl.commonlibrary.widget.CircleImageView-->
            <!--                    android:id="@+id/iv_one_head"-->
            <!--                    android:layout_width="65dp"-->
            <!--                    android:layout_height="65dp"-->
            <!--                    android:layout_gravity="center_horizontal"-->
            <!--                    android:layout_marginTop="16dp"-->
            <!--                    tools:src="@color/color_333"/>-->

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/iv_one_head"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:scaleType="center"
                app:siBorderColor="@color/tran"
                app:siBorderWidth="0dp"
                app:siRadius="3dp"
                app:siSquare="false"
                tools:src="@color/black_alpha_45" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="6dp"
                android:src="@mipmap/ic_vote_one" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_one_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_333"
            android:textSize="15sp"
            tools:text="王建国" />

        <TextView
            android:id="@+id/tv_one_vote_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_999"
            android:textSize="15sp"
            tools:text="510票" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_top_bg"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/ll_one"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="30dp"
        android:visibility="invisible">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">

<!--            <com.zxwl.commonlibrary.widget.CircleImageView-->
<!--                android:id="@+id/iv_two_head"-->
<!--                android:layout_width="55dp"-->
<!--                android:layout_height="55dp"-->
<!--                tools:src="@color/color_333" />-->

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/iv_two_head"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="center"
                app:siBorderColor="@color/tran"
                app:siBorderWidth="0dp"
                app:siRadius="3dp"
                app:siSquare="false"
                tools:src="@color/black_alpha_45" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:src="@mipmap/ic_vote_two" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_two_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_333"
            android:textSize="15sp"
            tools:text="王建国" />

        <TextView
            android:id="@+id/tv_two_vote_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_999"
            android:textSize="15sp"
            tools:text="510票" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_top_bg"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/ll_one"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="30dp"
        android:visibility="invisible">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">

<!--            <com.zxwl.commonlibrary.widget.CircleImageView-->
<!--                android:id="@+id/iv_three_head"-->
<!--                android:layout_width="55dp"-->
<!--                android:layout_height="55dp"-->
<!--                tools:src="@color/color_333" />-->

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/iv_three_head"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="center"
                app:siBorderColor="@color/tran"
                app:siBorderWidth="0dp"
                app:siRadius="3dp"
                app:siSquare="false"
                tools:src="@color/black_alpha_45" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:src="@mipmap/ic_vote_three" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_three_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_333"
            android:textSize="15sp"
            tools:text="王建国" />

        <TextView
            android:id="@+id/tv_three_vote_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_999"
            android:textSize="15sp"
            tools:text="510票" />
    </LinearLayout>
</RelativeLayout>