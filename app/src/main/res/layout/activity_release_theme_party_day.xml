<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.zxwl.xinji.activity.ReleaseThemePartyDayActivity">

    <include
        layout="@layout/common_title_layout_old"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

              <com.zxwl.xinji.widget.ContainsEmojiEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:visibility="gone"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:maxLength="64"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:singleLine="true"
                    android:textColor="@color/color_333"
                    android:textColorHint="@color/color_999"
                    android:textSize="16sp"/>

              <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@color/color_eee"/>

              <com.zxwl.xinji.widget.ContainsEmojiEditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@null"
                    android:hint="请输入标题"
                    android:maxLength="64"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:singleLine="true"
                    android:textColor="@color/color_333"
                    android:textColorHint="@color/color_999"
                    android:textSize="16sp"/>

              <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@color/color_eee"/>

    <LinearLayout
        android:id="@+id/ll_start_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_start_lable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="开始时间"
            android:textColor="@color/color_333"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="12dp"
            android:drawableRight="@mipmap/ic_array_right"
            android:gravity="center_vertical"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            tools:text="2018-09-09"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/color_eee"/>

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_end_lable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="截止时间"
            android:textColor="@color/color_333"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_conf_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="12dp"
            android:drawableRight="@mipmap/ic_array_right"
            android:gravity="center_vertical"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            tools:text="2018-09-09"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/color_eee"/>

    <com.zxwl.xinji.widget.ContainsEmojiEditText
        android:id="@+id/et_make_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:visibility="gone"
        android:layout_marginRight="13dp"
        android:background="@null"
        android:hint="请输入备注1"
        android:maxLength="64"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textColorHint="@color/color_999"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_eee" />

    <com.zxwl.xinji.widget.ContainsEmojiEditText
        android:id="@+id/et_make_two"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@null"
        android:hint="请输入备注2"
        android:maxLength="64"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textColorHint="@color/color_999"
        android:textSize="16sp"/>

    <View
        android:background="@color/color_eee"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <com.zxwl.xinji.widget.ContainsEmojiEditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@null"
        android:gravity="top"
        android:hint="请输入正文"
        android:paddingBottom="16dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp"
        android:maxLength="255"
        android:textColor="@color/color_333"
        android:inputType="textMultiLine"
        android:textColorHint="@color/color_999"
        android:textSize="16sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:overScrollMode="never"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
